@page
@model TheRealBank.UI.Pages.Mobile.ExtratoModel
@{
    ViewData["Title"] = "Extrato";
    // A LINHA "@Layout = null;" FOI REMOVIDA DAQUI.
}

<style>
    /* Estilos base da sua página de Experiência */
    /* A regra 'body' foi removida daqui */

    .experience {
        --purple: #5e00a3;
        --green: #00c66e;
        --dark-gray: #333;
        --medium-gray: #888;
        --light-gray: #f0f2f5;
        --white: #ffffff;
        --border-color: #e0e0e0;
        display: flex;
        justify-content: center;
        padding: 16px 0;
        /* background-color: silver; FOI REMOVIDO */
        min-height: calc(100vh - 56px);
    }

        .experience .mobile-frame {
            width: 375px;
            height: 812px;
            background-color: var(--light-gray); /* Fundo da tela do app */
            border-radius: 40px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .experience .screen {
            flex-grow: 1;
            overflow-y: auto;
            padding-bottom: 80px;
            -webkit-overflow-scrolling: touch;
        }

        .experience .status-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            background-color: var(--light-gray);
            font-size: 14px;
            font-weight: 600;
            color: var(--dark-gray);
        }

            .experience .status-bar .icons i {
                margin-left: 8px;
            }

        .experience .app-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: var(--light-gray);
            position: sticky;
            top: 0;
            z-index: 10;
        }

            .experience .app-header .actions i {
                font-size: 20px;
                color: var(--purple);
                margin-left: 20px;
            }

            .experience .app-header .back-button {
                font-size: 20px;
                color: var(--purple);
                text-decoration: none;
            }

            .experience .app-header .header-title {
                font-size: 18px;
                font-weight: 600;
                color: var(--dark-gray);
                margin: 0;
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
            }

        .experience main {
            padding: 0 20px;
        }

        .experience section {
            margin-bottom: 20px;
        }

        .experience .card-section {
            background-color: var(--white);
            border-radius: 12px;
            padding: 20px;
            border: 1px solid var(--border-color);
            color: var(--dark-gray);
        }

        .experience .transactions-section {
            margin-top: 25px;
        }

            .experience .transactions-section h3 {
                font-size: 16px;
                font-weight: 600;
                margin-bottom: 15px;
                color: var(--dark-gray);
            }

        .experience .transaction-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            background-color: var(--white);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            text-decoration: none;
            color: var(--dark-gray);
            margin-bottom: 10px;
            transition: transform 0.2s ease-in-out;
        }

            .experience .transaction-item:hover {
                transform: translateY(-2px);
            }

            .experience .transaction-item .details {
                display: flex;
                align-items: center;
            }

            .experience .transaction-item .icon i {
                color: var(--purple);
                font-size: 20px;
                margin-right: 15px;
            }

            .experience .transaction-item .info {
                flex-grow: 1;
            }

                .experience .transaction-item .info h4 {
                    font-size: 14px;
                    font-weight: 600;
                    margin: 0;
                }

                .experience .transaction-item .info p {
                    font-size: 12px;
                    color: var(--medium-gray);
                    margin: 0;
                }

            .experience .transaction-item .amount {
                font-size: 14px;
                font-weight: 600;
            }

            .experience .transaction-item.debit .amount {
                color: #d9534f;
            }

            .experience .transaction-item.credit .amount {
                color: #5cb85c;
            }

        .experience .bottom-nav {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 80px;
            background-color: var(--white);
            display: flex;
            justify-content: space-around;
            align-items: center;
            border-top: 1px solid var(--border-color);
            border-bottom-left-radius: 40px;
            border-bottom-right-radius: 40px;
        }

        .experience .mobile-nav-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-decoration: none;
            color: var(--medium-gray);
        }

            .experience .mobile-nav-item.active {
                color: var(--purple);
            }

            .experience .mobile-nav-item i {
                font-size: 22px;
                margin-bottom: 5px;
            }

            .experience .mobile-nav-item span {
                font-size: 12px;
                font-weight: 500;
            }

        /* --- NOVOS ESTILOS PARA O EXTRATO --- */
        .experience .filter-card {
            background-color: var(--white);
            border-radius: 12px;
            padding: 20px;
            border: 1px solid var(--border-color);
        }

            .experience .filter-card .form-group {
                margin-bottom: 15px;
            }

            .experience .filter-card label {
                font-weight: 600;
                font-size: 12px;
                color: var(--dark-gray);
                margin-bottom: 5px;
                display: block;
            }

            .experience .filter-card select, .experience .filter-card .btn-filtrar {
                width: 100%;
                padding: 12px 15px;
                border-radius: 8px;
                border: 1px solid var(--border-color);
                background-color: var(--light-gray);
                font-size: 14px;
                font-weight: 500;
                box-sizing: border-box; /* Garante que o padding não estoure a largura */
            }

            .experience .filter-card .btn-filtrar {
                background-color: var(--purple);
                color: var(--white);
                border: none;
                cursor: pointer;
                font-weight: 600;
                margin-top: 10px;
            }

        .experience .summary-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-top: 20px;
        }

        .experience .summary-item {
            background-color: var(--white);
            padding: 15px;
            border-radius: 12px;
            border: 1px solid var(--border-color);
        }

            .experience .summary-item h4 {
                font-size: 12px;
                font-weight: 600;
                color: var(--medium-gray);
                margin: 0 0 5px 0;
                text-transform: uppercase;
            }

            .experience .summary-item p {
                font-size: 18px;
                font-weight: 700;
                margin: 0;
            }

            .experience .summary-item .credit {
                color: #5cb85c;
            }

            .experience .summary-item .debit {
                color: #d9534f;
            }

            .experience .summary-item .balance {
                color: var(--dark-gray);
            }

</style>

<div class="experience">
    <div class="mobile-frame">
        <div class="status-bar">
            <span class="time">12:01</span>
            <div class="icons">
                <i class="fas fa-signal"></i>
                <i class="fas fa-wifi"></i>
                <i class="fas fa-battery-full"></i>
            </div>
        </div>

        <div class="screen">
            <header class="app-header">
                <a asp-page="/Experiencia/Layout" class="back-button">
                    <i class="fas fa-chevron-left"></i>
                </a>
                <h1 class="header-title">Meu Extrato</h1>
                <div style="width: 20px;"></div>
            </header>

            <main>
                <section class="filter-card">
                    <form method="get">
                        <div class="form-group">
                            <label for="mes">Mês</label>
                            <select id="mes" name="Mes" class="form-select" asp-for="Mes" asp-items="@Model.Meses"></select>
                        </div>
                        <div class="form-group">
                            <label for="ano">Ano</label>
                            <select id="ano" name="Ano" class="form-select" asp-for="Ano" asp-items="@Model.Anos"></select>
                        </div>
                        <button type="submit" class="btn-filtrar">
                            <i class="fas fa-search"></i> Filtrar Período
                        </button>
                    </form>
                </section>

                <section class="summary-grid">
                    <div class="summary-item">
                        <h4>Entradas</h4>
                        <p class="credit">@Model.TotalEntradas.ToString("C")</p>
                    </div>
                    <div class="summary-item">
                        <h4>Saídas</h4>
                        <p class="debit">@Model.TotalSaidas.ToString("C")</p>
                    </div>
                    <div class="summary-item" style="grid-column: 1 / -1;">
                        <h4>Saldo do Mês</h4>
                        <p class="balance @(Model.SaldoMes >= 0 ? "credit" : "debit")">
                            @Model.SaldoMes.ToString("C")
                        </p>
                    </div>
                </section>

                <section class="transactions-section">
                    <h3>Lançamentos de @Model.Meses.First(m => m.Value == Model.Mes.ToString()).Text</h3>

                    @if (Model.Transacoes.Any())
                    {
                        @foreach (var transacao in Model.Transacoes)
                        {
                            // Usando suas classes .transaction-item, .debit, .credit
                            <a href="#" class="transaction-item @(transacao.Tipo == "Entrada" ? "credit" : "debit")">
                                <div class="details">
                                    <div class="icon"><i class="@transacao.Icone"></i></div>
                                    <div class="info">
                                        <h4>@transacao.Descricao</h4>
                                        <p>@transacao.Data.ToString("dd/MM/yyyy")</p>
                                    </div>
                                </div>
                                <span class="amount">
                                    @transacao.Valor.ToString("C")
                                </span>
                            </a>
                        }
                    }
                    else
                    {
                        <div class="transaction-item">
                            <div class="details">
                                <div class="icon"><i class="fas fa-leaf"></i></div>
                                <div class="info">
                                    <h4>Sem lançamentos</h4>
                                    <p>Nenhuma transação encontrada para este período.</p>
                                </div>
                            </div>
                        </div>
                    }
                </section>
            </main>
        </div>

        <nav class="bottom-nav">
            <a asp-page="/Experiencia/Layout" class="mobile-nav-item">
                <i class="fas fa-user-circle"></i>
                <span>Sua conta</span>
            </a>
            <a href="#" class="mobile-nav-item">
                <i class="fas fa-chart-line"></i>
                <span>Investimentos</span>
            </a>
            <a href="#" class="mobile-nav-item">
                <i class="fas fa-cog"></i>
                <span>Configurações</span>
            </a>
        </nav>
    </div>
</div>