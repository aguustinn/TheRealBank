@page
@model TheRealBank.UI.Pages.Mobile.Pay.QRCodeModel
@{
    ViewData["Title"] = "PIX QR Code";
}

<style>
    /* CSS BASE DO SEU APLICATIVO (COPIADO) */
    .experience {
        --purple: #5e00a3;
        --green: #00c66e;
        --dark-gray: #333;
        --medium-gray: #888;
        --light-gray: #f0f2f5;
        --white: #ffffff;
        --border-color: #e0e0e0;
        display: flex;
        justify-content: center;
        padding: 16px 0;
        min-height: calc(100vh - 56px);
    }

        .experience .mobile-frame {
            width: 375px;
            height: 812px;
            background-color: var(--light-gray);
            border-radius: 40px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .experience .screen {
            flex-grow: 1;
            overflow-y: auto;
            padding-bottom: 80px;
            -webkit-overflow-scrolling: touch;
        }

        .experience .status-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            background-color: var(--light-gray);
            font-size: 14px;
            font-weight: 600;
            color: var(--dark-gray);
        }

            .experience .status-bar .icons i {
                margin-left: 8px;
            }

        .experience .app-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: var(--light-gray);
            position: sticky;
            top: 0;
            z-index: 10;
        }

            .experience .app-header .back-button {
                font-size: 20px;
                color: var(--purple);
                text-decoration: none;
            }

            .experience .app-header .header-title {
                font-size: 18px;
                font-weight: 600;
                color: var(--dark-gray);
                margin: 0;
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
            }

        .experience main {
            padding: 0 20px;
        }

        .experience section {
            margin-bottom: 20px;
        }

        .experience .bottom-nav {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 80px;
            background-color: var(--white);
            display: flex;
            justify-content: space-around;
            align-items: center;
            border-top: 1px solid var(--border-color);
            border-bottom-left-radius: 40px;
            border-bottom-right-radius: 40px;
        }

        .experience .mobile-nav-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-decoration: none;
            color: var(--medium-gray);
        }

            .experience .mobile-nav-item.active {
                color: var(--purple);
            }

            .experience .mobile-nav-item i {
                font-size: 22px;
                margin-bottom: 5px;
            }

            .experience .mobile-nav-item span {
                font-size: 12px;
                font-weight: 500;
            }

        /* --- NOVOS ESTILOS PARA A PÁGINA QR CODE --- */

        /* Estilo das Abas (Pagar / Receber) */
        .experience .nav-tabs-creative {
            border-bottom: none;
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

            .experience .nav-tabs-creative .nav-link {
                flex-grow: 1;
                text-align: center;
                background-color: var(--white);
                border: 1px solid var(--border-color);
                color: var(--medium-gray);
                font-weight: 600;
                border-radius: 10px;
                padding: 12px;
                transition: all 0.2s ease;
            }

                .experience .nav-tabs-creative .nav-link.active {
                    background-color: var(--purple);
                    color: var(--white);
                    border-color: var(--purple);
                    box-shadow: 0 4px 12px rgba(94,0,163,0.3);
                }

                .experience .nav-tabs-creative .nav-link:not(.active):hover {
                    background-color: #fcfcff;
                    color: var(--dark-gray);
                }

        .experience .tab-content-creative {
            background-color: var(--white);
            border-radius: 16px;
            padding: 25px;
            border: 1px solid var(--border-color);
        }

        .experience .tab-pane {
            text-align: center;
        }

            .experience .tab-pane h3 {
                font-size: 16px;
                font-weight: 600;
                margin-top: 0;
                margin-bottom: 10px;
                color: var(--dark-gray);
            }

            .experience .tab-pane p.instrucao {
                font-size: 14px;
                color: var(--medium-gray);
                margin-bottom: 20px;
            }

        /* Simulação da Câmera (Aba Pagar) */
        .experience .camera-viewfinder {
            width: 100%;
            max-width: 250px;
            height: 250px;
            background-color: #000;
            border-radius: 12px;
            margin: 15px auto 20px auto;
            position: relative;
            overflow: hidden;
            border: 2px solid var(--medium-gray);
        }

        .experience .scan-line {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, transparent, var(--green), transparent);
            box-shadow: 0 0 10px var(--green);
            animation: scan 3s linear infinite;
        }
    /* Animação da linha de scan */
    @@keyframes scan {
        0% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(247px);
        }

        100% {
            transform: translateY(0);
        }
    }

    /* Botões */
    .experience .btn-primary-full, .experience .btn-secondary-full {
        background-color: var(--purple);
        color: var(--white);
        border: none;
        cursor: pointer;
        font-weight: 600;
        font-size: 16px;
        width: 100%;
        padding: 14px 15px;
        border-radius: 10px;
        margin-top: 10px;
        transition: all 0.2s ease;
        text-decoration: none;
        display: block;
    }

        .experience .btn-primary-full:hover {
            background-color: #4a0083;
            box-shadow: 0 4px 12px rgba(94,0,163,0.3);
            transform: translateY(-2px);
        }

    .experience .btn-secondary-full {
        background-color: var(--light-gray);
        color: var(--dark-gray);
        border: 1px solid var(--border-color);
    }

        .experience .btn-secondary-full:hover {
            background-color: #e2e6ea;
            transform: translateY(-2px);
        }

    /* Display do QR Code (Aba Receber) */
    .experience .qr-code-display {
        padding: 15px;
        background-color: var(--white);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        max-width: 250px;
        height: 250px;
        margin: 15px auto 20px auto;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .experience .qr-code-display img {
            width: 100%;
            height: 100%;
        }

</style>

<div class="experience">
    <div class="mobile-frame">
        <div class="status-bar">
            <span class="time">12:04</span>
            <div class="icons">
                <i class="fas fa-signal"></i>
                <i class="fas fa-wifi"></i>
                <i class="fas fa-battery-full"></i>
            </div>
        </div>

        <div class="screen">
            <header class="app-header">
                <a asp-page="/Mobile/Pay/Pix" class="back-button">
                    <i class="fas fa-chevron-left"></i>
                </a>
                <h1 class="header-title">PIX com QR Code</h1>
                <div style="width: 20px;"></div>
            </header>

            <main>
                <ul class="nav nav-tabs-creative" id="qrTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="pagar-tab" data-bs-toggle="tab" data-bs-target="#pagar" type="button" role="tab" aria-controls="pagar" aria-selected="true">
                            <i class="fas fa-camera me-2"></i> Pagar
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="receber-tab" data-bs-toggle="tab" data-bs-target="#receber" type="button" role="tab" aria-controls="receber" aria-selected="false">
                            <i class="fas fa-qrcode me-2"></i> Receber
                        </button>
                    </li>
                </ul>

                <section class="tab-content-creative">
                    <div class="tab-content" id="qrTabContent">

                        <div class="tab-pane fade show active" id="pagar" role="tabpanel" aria-labelledby="pagar-tab">
                            <h3>Pagar com QR Code</h3>
                            <p class="instrucao">Aponte a câmera para o código.</p>

                            <div class="camera-viewfinder">
                                <div class="scan-line"></div>
                            </div>

                            <a href="#" class="btn-secondary-full">
                                <i class="fas fa-image me-2"></i> Escanear da Galeria
                            </a>
                        </div>

                        <div class="tab-pane fade" id="receber" role="tabpanel" aria-labelledby="receber-tab">
                            <h3>Receber com PIX</h3>
                            <p class="instrucao">Mostre este código para a pessoa.</p>

                            <div class="qr-code-display">
                                <img src="https://api.qrserver.com/v1/create-qr-code/?size=250x250&data=@Model.MinhaChavePix" alt="Meu QR Code PIX" />
                            </div>

                            <a href="#" class="btn-primary-full">
                                <i class="fas fa-copy me-2"></i> Copiar Código
                            </a>
                            <a href="#" class="btn-secondary-full">
                                <i class="fas fa-dollar-sign me-2"></i> Definir Valor
                            </a>
                        </div>
                    </div>
                </section>
            </main>
        </div>

        <nav class="bottom-nav">
            <a asp-page="/Experiencia/Layout" class="mobile-nav-item">
                <i class="fas fa-user-circle"></i>
                <span>Sua conta</span>
            </a>
            <a href="#" class="mobile-nav-item">
                <i class="fas fa-chart-line"></i>
                <span>Investimentos</span>
            </a>
            <a href="#" class="mobile-nav-item">
                <i class="fas fa-cog"></i>
                <span>Configurações</span>
            </a>
        </nav>
    </div>
</div>