@page
@model TheRealBank.UI.Pages.Mobile.Pay.CopiaColaModel
@{
    ViewData["Title"] = "PIX Copia e Cola";
}

<style>
    /* CSS BASE DO SEU APLICATIVO (COPIADO) */
    .experience {
        --purple: #5e00a3;
        --green: #00c66e;
        --dark-gray: #333;
        --medium-gray: #888;
        --light-gray: #f0f2f5;
        --white: #ffffff;
        --border-color: #e0e0e0;
        display: flex;
        justify-content: center;
        padding: 16px 0;
        min-height: calc(100vh - 56px);
    }

        .experience .mobile-frame {
            width: 375px;
            height: 812px;
            background-color: var(--light-gray);
            border-radius: 40px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .experience .screen {
            flex-grow: 1;
            overflow-y: auto;
            padding-bottom: 80px;
            -webkit-overflow-scrolling: touch;
        }

        .experience .status-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            background-color: var(--light-gray);
            font-size: 14px;
            font-weight: 600;
            color: var(--dark-gray);
        }

            .experience .status-bar .icons i {
                margin-left: 8px;
            }

        .experience .app-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: var(--light-gray);
            position: sticky;
            top: 0;
            z-index: 10;
        }

            .experience .app-header .back-button {
                font-size: 20px;
                color: var(--purple);
                text-decoration: none;
            }

            .experience .app-header .header-title {
                font-size: 18px;
                font-weight: 600;
                color: var(--dark-gray);
                margin: 0;
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
            }

        .experience main {
            padding: 0 20px;
        }

        .experience section {
            margin-bottom: 20px;
        }

        .experience .bottom-nav {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 80px;
            background-color: var(--white);
            display: flex;
            justify-content: space-around;
            align-items: center;
            border-top: 1px solid var(--border-color);
            border-bottom-left-radius: 40px;
            border-bottom-right-radius: 40px;
        }

        .experience .mobile-nav-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-decoration: none;
            color: var(--medium-gray);
        }

            .experience .mobile-nav-item.active {
                color: var(--purple);
            }

            .experience .mobile-nav-item i {
                font-size: 22px;
                margin-bottom: 5px;
            }

            .experience .mobile-nav-item span {
                font-size: 12px;
                font-weight: 500;
            }

        /* --- NOVOS ESTILOS PARA A PÁGINA COPIA E COLA --- */

        .experience .balance-info {
            font-size: 14px;
            font-weight: 500;
            color: var(--dark-gray);
            text-align: center;
            padding: 5px 0 15px 0;
        }

            .experience .balance-info span {
                font-weight: 700;
                color: var(--green);
            }

        .experience .paste-card {
            background-color: var(--white);
            border-radius: 16px;
            padding: 25px;
            border: 1px solid var(--border-color);
            box-shadow: 0 4px 15px rgba(0,0,0,0.03);
        }

            .experience .paste-card h3 {
                font-size: 16px;
                font-weight: 600;
                margin-top: 0;
                margin-bottom: 5px;
                color: var(--dark-gray);
            }

            .experience .paste-card p.instrucao {
                font-size: 14px;
                color: var(--medium-gray);
                margin-bottom: 20px;
            }

        /* Área de texto para colar */
        .experience .form-group {
            margin-bottom: 20px;
        }

            .experience .form-group textarea {
                width: 100%;
                height: 120px;
                padding: 12px 15px;
                border-radius: 8px;
                border: 1px solid var(--border-color);
                background-color: var(--light-gray);
                font-size: 14px;
                font-weight: 500;
                box-sizing: border-box;
                resize: none;
                font-family: 'Poppins', sans-serif;
            }

                .experience .form-group textarea:focus {
                    outline: none;
                    border-color: var(--purple);
                    background-color: var(--white);
                    box-shadow: 0 0 0 2px rgba(94,0,163,0.2);
                }

        /* Mensagem de erro de validação */
        .experience .validation-error {
            font-size: 12px;
            color: #d9534f;
            font-weight: 500;
            margin-top: 5px;
        }

        /* Botão Principal */
        .experience .btn-primary-full {
            background-color: var(--purple);
            color: var(--white);
            border: none;
            cursor: pointer;
            font-weight: 600;
            font-size: 16px;
            width: 100%;
            padding: 14px 15px;
            border-radius: 10px;
            margin-top: 10px;
            transition: all 0.2s ease;
        }

            .experience .btn-primary-full:hover {
                background-color: #4a0083; /* Roxo mais escuro */
                box-shadow: 0 4px 12px rgba(94,0,163,0.3);
                transform: translateY(-2px);
            }

        /* Seção de Ajuda */
        .experience .help-section {
            margin-top: 25px;
            text-align: center;
        }

            .experience .help-section h4 {
                font-size: 14px;
                font-weight: 600;
                color: var(--dark-gray);
                margin-bottom: 10px;
            }

            .experience .help-section p {
                font-size: 12px;
                color: var(--medium-gray);
                line-height: 1.6;
            }

</style>

<div class="experience">
    <div class="mobile-frame">
        <div class="status-bar">
            <span class="time">12:06</span>
            <div class="icons">
                <i class="fas fa-signal"></i>
                <i class="fas fa-wifi"></i>
                <i class="fas fa-battery-full"></i>
            </div>
        </div>

        <div class="screen">
            <header class="app-header">
                <a asp-page="/Mobile/Pay/Pix" class="back-button">
                    <i class="fas fa-chevron-left"></i>
                </a>
                <h1 class="header-title">PIX Copia e Cola</h1>
                <div style="width: 20px;"></div>
            </header>

            <main>
                <section class="balance-info">
                    Saldo disponível: <span>@Model.SaldoDisponivel.ToString("C")</span>
                </section>

                <section class="paste-card">
                    <form method="post">
                        <h3>Pagar com código</h3>
                        <p class="instrucao">Cole o código PIX aqui para continuar o pagamento.</p>

                        <div class="form-group">
                            <textarea asp-for="PixCode" placeholder="Cole o código PIX aqui..."></textarea>
                            <span asp-validation-for="PixCode" class="validation-error"></span>
                        </div>

                        <button typea="submit" class="btn-primary-full">
                            Continuar <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                    </form>
                </section>

                <section class="help-section">
                    <h4>Como funciona?</h4>
                    <p>
                        1. Copie o código PIX (QR Code) no site ou app onde você quer pagar.<br />
                        2. Volte aqui e cole o código na caixa acima.<br />
                        3. Clique em "Continuar" para ver os detalhes e confirmar.
                    </p>
                </section>
            </main>
        </div>

        <nav class="bottom-nav">
            <a asp-page="/Experiencia/Layout" class="mobile-nav-item">
                <i class="fas fa-user-circle"></i>
                <span>Sua conta</span>
            </a>
            <a href="#" class="mobile-nav-item">
                <i class="fas fa-chart-line"></i>
                <span>Investimentos</span>
            </a>
            <a href="#" class="mobile-nav-item">
                <i class="fas fa-cog"></i>
                <span>Configurações</span>
            </a>
        </nav>
    </div>
</div>