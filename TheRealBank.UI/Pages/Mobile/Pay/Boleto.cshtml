@page
@model TheRealBank.UI.Pages.Mobile.Pay.BoletoModel
@{
    ViewData["Title"] = "Pagar Boleto";
}

<style>
    /* CSS BASE DO SEU APLICATIVO (COPIADO) */
    .experience {
        --purple: #5e00a3;
        --green: #00c66e;
        --dark-gray: #333;
        --medium-gray: #888;
        --light-gray: #f0f2f5;
        --white: #ffffff;
        --border-color: #e0e0e0;
        --danger-red: #d9534f;
        display: flex;
        justify-content: center;
        padding: 16px 0;
        min-height: calc(100vh - 56px);
    }

        .experience .mobile-frame {
            width: 375px;
            height: 812px;
            background-color: var(--light-gray);
            border-radius: 40px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .experience .screen {
            flex-grow: 1;
            overflow-y: auto;
            padding-bottom: 80px;
            -webkit-overflow-scrolling: touch;
        }

        .experience .status-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            background-color: var(--light-gray);
            font-size: 14px;
            font-weight: 600;
            color: var(--dark-gray);
        }

            .experience .status-bar .icons i {
                margin-left: 8px;
            }

        .experience .app-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: var(--light-gray);
            position: sticky;
            top: 0;
            z-index: 10;
        }

            .experience .app-header .back-button {
                font-size: 20px;
                color: var(--purple);
                text-decoration: none;
            }

            .experience .app-header .header-title {
                font-size: 18px;
                font-weight: 600;
                color: var(--dark-gray);
                margin: 0;
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
            }

        .experience main {
            padding: 0 20px;
        }

        .experience section {
            margin-bottom: 20px;
        }

        .experience .bottom-nav {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 80px;
            background-color: var(--white);
            display: flex;
            justify-content: space-around;
            align-items: center;
            border-top: 1px solid var(--border-color);
            border-bottom-left-radius: 40px;
            border-bottom-right-radius: 40px;
        }

        .experience .mobile-nav-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-decoration: none;
            color: var(--medium-gray);
        }

            .experience .mobile-nav-item.active {
                color: var(--purple);
            }

            .experience .mobile-nav-item i {
                font-size: 22px;
                margin-bottom: 5px;
            }

            .experience .mobile-nav-item span {
                font-size: 12px;
                font-weight: 500;
            }

        /* --- ESTILOS REUTILIZADOS PARA ABAS E BOLETO --- */

        .experience .balance-info {
            font-size: 14px;
            font-weight: 500;
            color: var(--dark-gray);
            text-align: center;
            padding: 5px 0 15px 0;
        }

            .experience .balance-info span {
                font-weight: 700;
                color: var(--green);
            }

        /* Estilo das Abas (copiado do QR Code) */
        .experience .nav-tabs-creative {
            border-bottom: none;
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

            .experience .nav-tabs-creative .nav-link {
                flex-grow: 1;
                text-align: center;
                background-color: var(--white);
                border: 1px solid var(--border-color);
                color: var(--medium-gray);
                font-weight: 600;
                border-radius: 10px;
                padding: 12px;
                transition: all 0.2s ease;
            }

                .experience .nav-tabs-creative .nav-link.active {
                    background-color: var(--purple);
                    color: var(--white);
                    border-color: var(--purple);
                    box-shadow: 0 4px 12px rgba(94,0,163,0.3);
                }

                .experience .nav-tabs-creative .nav-link:not(.active):hover {
                    background-color: #fcfcff;
                    color: var(--dark-gray);
                }

        /* Estilos dos cards (agora dentro das abas) */
        .experience .scanner-card,
        .experience .manual-entry-card {
            background-color: var(--white);
            border-radius: 16px;
            padding: 25px;
            border: 1px solid var(--border-color);
            box-shadow: 0 4px 15px rgba(0,0,0,0.03);
            text-align: center;
        }

        /* Ajuste para os cards não terem borda extra dentro da aba */
        .experience .tab-pane > section {
            border: none;
            box-shadow: none;
            padding: 10px 0 0 0;
        }

        .experience .scanner-card h3,
        .experience .manual-entry-card h3 {
            font-size: 16px;
            font-weight: 600;
            margin-top: 0;
            margin-bottom: 5px;
            color: var(--dark-gray);
        }

        .experience .scanner-card p.instrucao {
            font-size: 14px;
            color: var(--medium-gray);
            margin-bottom: 20px;
        }

        /* Simulação de Câmera */
        .experience .camera-viewfinder-boleto {
            width: 100%;
            max-width: 250px;
            height: 150px;
            background-color: #222;
            border-radius: 12px;
            margin: 15px auto 20px auto;
            position: relative;
            overflow: hidden;
            border: 2px solid var(--medium-gray);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .experience .barcode-scan-line {
            position: absolute;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--danger-red);
            box-shadow: 0 0 10px var(--danger-red), 0 0 10px var(--danger-red) inset;
            animation: scan-boleto 2s linear infinite;
        }

    @@keyframes scan-boleto {
        0% {
            transform: translateY(-73px);
        }

        50% {
            transform: translateY(73px);
        }

        100% {
            transform: translateY(-73px);
        }
    }

    /* Botões */
    .experience .btn-secondary-full,
    .experience .btn-primary-full {
        background-color: var(--purple);
        color: var(--white);
        border: none;
        cursor: pointer;
        font-weight: 600;
        font-size: 16px;
        width: 100%;
        padding: 14px 15px;
        border-radius: 10px;
        margin-top: 10px;
        transition: all 0.2s ease;
        text-decoration: none;
        display: block;
    }

    .experience .btn-secondary-full {
        background-color: var(--light-gray);
        color: var(--dark-gray);
        border: 1px solid var(--border-color);
    }

        .experience .btn-secondary-full:hover {
            background-color: #e2e6ea;
            transform: translateY(-2px);
        }

    .experience .btn-primary-full:hover {
        background-color: #4a0083;
        box-shadow: 0 4px 12px rgba(94,0,163,0.3);
        transform: translateY(-2px);
    }

    /* Formulário de digitação */
    .experience .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

        .experience .form-group textarea {
            width: 100%;
            height: 100px;
            padding: 12px 15px;
            border-radius: 8px;
            border: 1px solid var(--border-color);
            background-color: #fff;
            font-size: 14px;
            font-weight: 500;
            box-sizing: border-box;
            resize: none;
            font-family: 'Poppins', sans-serif;
        }

            .experience .form-group textarea:focus {
                outline: none;
                border-color: var(--purple);
                box-shadow: 0 0 0 2px rgba(94,0,163,0.2);
            }

    .experience .validation-error {
        font-size: 12px;
        color: var(--danger-red);
        font-weight: 500;
        margin-top: 5px;
    }

</style>

<div class="experience">
    <div class="mobile-frame">
        <div class="status-bar">
            <span class="time">12:07</span>
            <div class="icons">
                <i class="fas fa-signal"></i>
                <i class="fas fa-wifi"></i>
                <i class="fas fa-battery-full"></i>
            </div>
        </div>

        <div class="screen">
            <header class="app-header">
                <a asp-page="/Experiencia/Layout" class="back-button">
                    <i class="fas fa-chevron-left"></i>
                </a>
                <h1 class="header-title">Pagar Boleto</h1>
                <div style="width: 20px;"></div>
            </header>

            <main>
                <section class="balance-info">
                    Saldo disponível: <span>@Model.SaldoDisponivel.ToString("C")</span>
                </section>

                <ul class="nav nav-tabs-creative" id="boletoTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="escanear-tab" data-bs-toggle="tab" data-bs-target="#escanear" type="button" role="tab" aria-controls="escanear" aria-selected="true">
                            <i class="fas fa-camera me-2"></i> Escanear
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="digitar-tab" data-bs-toggle="tab" data-bs-target="#digitar" type="button" role="tab" aria-controls="digitar" aria-selected="false">
                            <i class="fas fa-keyboard me-2"></i> Digitar
                        </button>
                    </li>
                </ul>

                <div class="tab-content" id="boletoTabContent">

                    <div class="tab-pane fade show active" id="escanear" role="tabpanel" aria-labelledby="escanear-tab">
                        <section class="scanner-card">
                            <h3>Pagar com a câmera</h3>
                            <p class="instrucao">Aponte para o código de barras.</p>

                            <div class="camera-viewfinder-boleto">
                                <div class="barcode-scan-line"></div>
                            </div>

                            <a href="#" class="btn-secondary-full">
                                <i class="fas fa-camera me-2"></i> Abrir Câmera
                            </a>
                        </section>
                    </div>

                    <div class="tab-pane fade" id="digitar" role="tabpanel" aria-labelledby="digitar-tab">
                        <section class="manual-entry-card">
                            <h3>Digitar código de barras</h3>
                            <form method="post">
                                <div class="form-group">
                                    <textarea asp-for="CodigoDeBarras" placeholder="Cole ou digite o código do boleto..."></textarea>
                                    <span asp-validation-for="CodigoDeBarras" class="validation-error"></span>
                                </div>

                                <button type="submit" class="btn-primary-full">
                                    Continuar <i class="fas fa-arrow-right ms-2"></i>
                                </button>
                            </form>
                        </section>
                    </div>
                </div>

            </main>
        </div>

        <nav class="bottom-nav">
            <a asp-page="/Experiencia/Layout" class="mobile-nav-item">
                <i class="fas fa-user-circle"></i>
                <span>Sua conta</span>
            </a>
            <a href="#" class="mobile-nav-item">
                <i class="fas fa-chart-line"></i>
                <span>Investimentos</span>
            </a>
            <a href="#" class="mobile-nav-item">
                <i class="fas fa-cog"></i>
                <span>Configurações</span>
            </a>
        </nav>
    </div>
</div>