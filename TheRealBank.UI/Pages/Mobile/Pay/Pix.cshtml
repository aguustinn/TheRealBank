@page
@model TheRealBank.UI.Pages.Mobile.Pay.PixModel
@{
    ViewData["Title"] = "Área PIX";
}

<style>
    /* CSS BASE DO SEU APLICATIVO (COPIADO DO EXTRATO E DO LAYOUT)
        */
    .experience {
        --purple: #5e00a3;
        --green: #00c66e;
        --dark-gray: #333;
        --medium-gray: #888;
        --light-gray: #f0f2f5;
        --white: #ffffff;
        --border-color: #e0e0e0;
        display: flex;
        justify-content: center;
        padding: 16px 0;
        min-height: calc(100vh - 56px);
    }

        .experience .mobile-frame {
            width: 375px;
            height: 812px;
            background-color: var(--light-gray); /* Fundo da tela do app */
            border-radius: 40px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .experience .screen {
            flex-grow: 1;
            overflow-y: auto;
            padding-bottom: 80px;
            -webkit-overflow-scrolling: touch;
        }

        .experience .status-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            background-color: var(--light-gray);
            font-size: 14px;
            font-weight: 600;
            color: var(--dark-gray);
        }

            .experience .status-bar .icons i {
                margin-left: 8px;
            }

        .experience .app-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: var(--light-gray);
            position: sticky;
            top: 0;
            z-index: 10;
        }

            .experience .app-header .back-button {
                font-size: 20px;
                color: var(--purple);
                text-decoration: none;
            }

            .experience .app-header .header-title {
                font-size: 18px;
                font-weight: 600;
                color: var(--dark-gray);
                margin: 0;
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
            }

        .experience main {
            padding: 0 20px;
        }

        .experience section {
            margin-bottom: 20px;
        }

        /* Estilos dos links de serviço (copiado do seu Layout.cshtml) */
        .experience .service-options {
            margin-top: 25px;
        }

            .experience .service-options h3,
            .experience .pix-card h3 {
                font-size: 16px;
                font-weight: 600;
                margin-bottom: 15px;
                color: var(--dark-gray);
            }

        .experience .option-link {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            background-color: var(--white);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            text-decoration: none;
            color: var(--dark-gray);
            margin-bottom: 10px;
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }

            .experience .option-link:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(0,0,0,0.05);
            }

            .experience .option-link .icon-text {
                display: flex;
                align-items: center;
            }

            .experience .option-link i {
                color: var(--purple);
                font-size: 20px;
                margin-right: 15px;
            }

            .experience .option-link .arrow {
                color: var(--medium-gray);
            }

        /* --- NOVOS ESTILOS CRIATIVOS PARA O PIX --- */

        .experience .pix-card {
            background: linear-gradient(145deg, var(--white) 0%, #f9f9ff 100%);
            border-radius: 16px;
            padding: 25px;
            border: 1px solid var(--border-color);
            box-shadow: 0 4px 15px rgba(0,0,0,0.03);
        }

        .experience .pix-actions-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .experience .pix-action-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px 10px;
            background-color: var(--white);
            border-radius: 12px;
            border: 1px solid var(--border-color);
            text-decoration: none;
            color: var(--dark-gray);
            transition: all 0.2s ease-in-out;
            text-align: center;
        }

            .experience .pix-action-item:hover {
                transform: translateY(-4px);
                box-shadow: 0 5px 15px rgba(94, 0, 163, 0.1);
                border-color: var(--purple);
                color: var(--purple);
            }

            .experience .pix-action-item i {
                font-size: 28px;
                color: var(--purple);
                margin-bottom: 12px;
                line-height: 1;
            }

            .experience .pix-action-item span {
                font-size: 14px;
                font-weight: 600;
                line-height: 1.3;
            }

        .experience .bottom-nav {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 80px;
            background-color: var(--white);
            display: flex;
            justify-content: space-around;
            align-items: center;
            border-top: 1px solid var(--border-color);
            border-bottom-left-radius: 40px;
            border-bottom-right-radius: 40px;
        }

        .experience .mobile-nav-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-decoration: none;
            color: var(--medium-gray);
        }

            .experience .mobile-nav-item.active {
                color: var(--purple);
            }

            .experience .mobile-nav-item i {
                font-size: 22px;
                margin-bottom: 5px;
            }

            .experience .mobile-nav-item span {
                font-size: 12px;
                font-weight: 500;
            }

</style>

<div class="experience">
    <div class="mobile-frame">
        <div class="status-bar">
            <span class="time">12:02</span>
            <div class="icons">
                <i class="fas fa-signal"></i>
                <i class="fas fa-wifi"></i>
                <i class="fas fa-battery-full"></i>
            </div>
        </div>

        <div class="screen">
            <header class="app-header">
                <a asp-page="/Experiencia/Layout" class="back-button">
                    <i class="fas fa-chevron-left"></i>
                </a>
                <h1 class="header-title">Área PIX</h1>
                <div style="width: 20px;"></div>
            </header>

            <main>
                <section class="pix-card">
                    <h3>O que deseja fazer?</h3>
                    <div class="pix-actions-grid">
                        <a href="/Mobile/Pay/PixPay/QRCode" class="pix-action-item">
                            <i class="fas fa-qrcode"></i>
                            <span>Ler QR Code</span>
                        </a>
                        <a href="/Mobile/Pay/PixPay/PixCC" class="pix-action-item">
                            <i class="fas fa-paste"></i>
                            <span>PIX Copia e Cola</span>
                        </a>
                        <a href="/Mobile/Pay/PixPay/Transferir" class="pix-action-item">
                            <i class="fas fa-paper-plane"></i>
                            <span>Transferir</span>
                        </a>
                        <a href="/Mobile/Pay/PixPay/Receber" class="pix-action-item">
                            <i class="fas fa-download"></i>
                            <span>Receber</span>
                        </a>
                    </div>
                </section>

                <section class="service-options">
                    <h3>Gerenciamento</h3>
                    <a href="#" class="option-link">
                        <div class="icon-text">
                            <i class="fas fa-key"></i>
                            <span>Minhas Chaves</span>
                        </div>
                        <i class="fas fa-chevron-right arrow"></i>
                    </a>
                    <a href="#" class="option-link">
                        <div class="icon-text">
                            <i class="fas fa-tachometer-alt"></i>
                            <span>Meus Limites</span>
                        </div>
                        <i class="fas fa-chevron-right arrow"></i>
                    </a>
                    <a href="#" class="option-link">
                        <div class="icon-text">
                            <i class="fas fa-history"></i>
                            <span>Extrato PIX</span>
                        </div>
                        <i class="fas fa-chevron-right arrow"></i>
                    </a>
                    <a href="#" class="option-link">
                        <div class="icon-text">
                            <i class="fas fa-question-circle"></i>
                            <span>Precisa de ajuda?</span>
                        </div>
                        <i class="fas fa-chevron-right arrow"></i>
                    </a>
                </section>
            </main>
        </div>

        <nav class="bottom-nav">
            <a asp-page="/Experiencia/Layout" class="mobile-nav-item">
                <i class="fas fa-user-circle"></i>
                <span>Sua conta</span>
            </a>
            <a href="#" class="mobile-nav-item">
                <i class="fas fa-chart-line"></i>
                <span>Investimentos</span>
            </a>
            <a href="#" class="mobile-nav-item">
                <i class="fas fa-cog"></i>
                <span>Configurações</span>
            </a>
        </nav>
    </div>
</div>