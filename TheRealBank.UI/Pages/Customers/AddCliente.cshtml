@page
@model TheRealBank.UI.Pages.Customers.AddClienteModel
@{
    ViewData["Title"] = "Cadastro de Cliente";
    Layout = "/Pages/Shared/_Layout.cshtml"; // AQUI ESTÁ A CORREÇÃO: Caminho completo para o layout
}

<style>
    /* * Este CSS usa as variáveis de cor (ex: --bank-dark, --bank-accent)
         * que estão definidas no seu _Layout.cshtml
        */
    .hero-section {
        background: linear-gradient(135deg, #f2f7fa 0%, #ffffff 100%);
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 120px);
        padding: 40px 0;
    }

    .register-container {
        text-align: left; /* Formulários ficam melhores alinhados à esquerda */
        background-color: white;
        padding: 40px 50px;
        border-radius: 16px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.08);
        border: 1px solid #e0e8f0;
        max-width: 600px; /* Um pouco maior para um formulário */
        width: 90%;
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInSlideUp 0.8s ease-out forwards;
    }

    /* Animação de entrada */
    @@keyframes fadeInSlideUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .register-header {
        text-align: center;
        margin-bottom: 35px;
    }

    .register-icon {
        font-size: 3rem;
        color: var(--bank-accent); /* Cor Dourada de destaque */
        margin-bottom: 15px;
    }

    .register-header h1 {
        color: var(--bank-dark); /* Cor Azul Escura do título */
        font-weight: 700;
        font-size: 2.2em;
        margin: 0;
    }

    /* Estilizando os campos do Bootstrap */
    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: 600;
            color: #556278;
            margin-bottom: 8px;
            font-size: 0.95em;
        }

    .form-control {
        padding: 12px 15px;
        font-size: 1em;
        border-radius: 8px;
        border: 1px solid #ced4da;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

        /* Destaque ao focar no campo */
        .form-control:focus {
            border-color: var(--bank-primary); /* Azul de ação */
            box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.15);
            outline: none;
        }

    /* Estilo para o botão de submit (usando classes Bootstrap + ícone) */
    .btn-primary {
        background-color: var(--bank-primary);
        border-color: var(--bank-primary);
        padding: 12px 30px;
        font-size: 1.1em;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-primary i.fa-solid {
            margin-right: 10px;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.2);
        }

    .back-link {
        display: block;
        text-align: center;
        margin-top: 25px;
        color: var(--bank-dark);
        font-weight: 500;
        text-decoration: none;
        transition: color 0.2s;
    }

        .back-link:hover {
            color: var(--bank-primary);
            text-decoration: underline;
        }

</style>

<div class="hero-section">
    <div class="register-container">

        <div class="register-header">
            <i class="fa-solid fa-user-plus register-icon"></i>
            <h1>Cadastro de Novo Cliente</h1>
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Cliente.Nome"></label>
                <input asp-for="Cliente.Nome" class="form-control" placeholder="Digite o nome completo">
                <span asp-validation-for="Cliente.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cliente.CPF"></label>
                <input asp-for="Cliente.CPF" class="form-control" placeholder="999.999.999-99">
                <span asp-validation-for="Cliente.CPF" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cliente.Email"></label>
                <input asp-for="Cliente.Email" class="form-control" type="email" placeholder="seu.email@exemplo.com">
                <span asp-validation-for="Cliente.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cliente.DataNascimento"></label>
                <input asp-for="Cliente.DataNascimento" class="form-control" type="date">
                <span asp-validation-for="Cliente.DataNascimento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cliente.Saldo">Saldo Inicial</label>
                <input asp-for="Cliente.Saldo" class="form-control" type="number" step="0.01" placeholder="R$ 100,00">
                <span asp-validation-for="Cliente.Saldo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cliente.Senha">Senha</label>
                <input asp-for="Cliente.Senha" class="form-control" type="password" step="0.01" placeholder="password">
                <span asp-validation-for="Cliente.Senha" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-lg w-100 mt-3">
                <i class="fa-solid fa-check"></i>
                Cadastrar Cliente
            </button>

            <a asp-page="/Index" class="back-link">
                <i class="fa-solid fa-arrow-left fa-xs"></i> Voltar ao Painel
            </a>
        </form>
    </div>
</div>