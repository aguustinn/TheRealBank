@page "{cpf}"
@model TheRealBank.UI.Pages.Customers.Excluir_ClienteModel
@{
    ViewData["Title"] = "Excluir Cliente";
    Layout = "/Pages/Shared/_Layout.cshtml"; // CORRIGIDO: Aponta para o layout correto
}

<style>
    /* * Este CSS usa as variáveis de cor (ex: --bank-dark, --bank-accent)
         * que estão definidas no seu _Layout.cshtml
        */
    .hero-section {
        background: linear-gradient(135deg, #f2f7fa 0%, #ffffff 100%);
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 120px);
        padding: 40px 0;
    }

    /* O card de confirmação */
    .confirm-container {
        text-align: center; /* Centraliza o conteúdo do card */
        background-color: white;
        padding: 40px 50px;
        border-radius: 16px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.08);
        border: 1px solid #e0e8f0;
        max-width: 600px;
        width: 90%;
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInSlideUp 0.8s ease-out forwards;
    }

    /* Animação de entrada */
    @@keyframes fadeInSlideUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .confirm-header {
        text-align: center;
        margin-bottom: 25px;
    }

    /* Ícone de Perigo (Vermelho) */
    .confirm-icon {
        font-size: 3rem;
        color: #dc3545; /* Cor de Perigo (Vermelho) */
        margin-bottom: 15px;
    }

    .confirm-header h1 {
        color: var(--bank-dark); /* Cor Azul Escura do título */
        font-weight: 700;
        font-size: 2.2em;
        margin: 0;
    }

    .confirm-container p {
        color: #556278;
        font-size: 1.15em;
        line-height: 1.7;
        margin-bottom: 25px;
    }

    /* Bloco para mostrar os dados do cliente */
    .client-info {
        background-color: #f8f9fa; /* Fundo cinza claro */
        border: 1px solid #e9ecef;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 30px;
        text-align: left;
    }

        .client-info strong {
            color: var(--bank-dark);
            display: block;
            font-size: 1.1em;
        }

        .client-info span {
            color: #556278;
            font-size: 1.05em;
        }

    /* Botões de Ação */
    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 20px; /* Espaço entre os botões */
    }

        .action-buttons .btn {
            font-weight: 600;
            font-size: 1.1em;
            padding: 12px 30px;
            border-radius: 8px;
            min-width: 150px; /* Largura mínima para os botões */
        }

            .action-buttons .btn i {
                margin-right: 8px;
            }

    /* Botão de Perigo (Excluir) */
    .btn-danger {
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.2);
        }

    /* Botão de Cancelar */
    .btn-outline-secondary {
        border-width: 2px;
        transition: all 0.3s ease;
    }

        .btn-outline-secondary:hover {
            transform: translateY(-2px);
        }

</style>

<div class="hero-section">
    <div class="confirm-container">

        <div class="confirm-header">
            <i class="fa-solid fa-triangle-exclamation confirm-icon"></i>
            <h1>Confirmar Exclusão</h1>
        </div>

        <p>Tem certeza que deseja excluir permanentemente o cliente abaixo? Esta ação não pode ser desfeita.</p>

        <!-- Informações do cliente para confirmação -->
        <div class="client-info">
            <strong>@Model.Cliente.Nome</strong>
            <span>CPF: @Model.Cliente.CPF</span>
        </div>

        <div class="action-buttons">
            <!-- Botão "Não" (Cancelar) - Link de volta para a lista -->
            <a class="btn btn-outline-secondary btn-lg" asp-page="/Customers/ExibirClientes">
                <i class="fa-solid fa-xmark"></i> Não
            </a>

            <!-- Botão "Sim" (Confirmar) - Form para executar o Post -->
            <form method="post" class="m-0">
                <input type="hidden" asp-for="Cliente.CPF" />
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fa-solid fa-trash-can"></i> Sim, Excluir
                </button>
            </form>
        </div>
    </div>
</div>
