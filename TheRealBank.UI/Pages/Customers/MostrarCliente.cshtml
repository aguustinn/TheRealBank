@page "{cpf}"
@model TheRealBank.UI.Pages.Customers.MostrarClienteModel
@{
    ViewData["Title"] = "Detalhes do Cliente";
    Layout = "/Pages/Shared/_Layout.cshtml"; // CORRIGIDO: Aponta para o layout correto
}

<style>
    /* * Este CSS usa as variáveis de cor (ex: --bank-dark, --bank-accent)
         * que estão definidas no seu _Layout.cshtml
        */
    .hero-section {
        background: linear-gradient(135deg, #f2f7fa 0%, #ffffff 100%);
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 120px);
        padding: 40px 0;
    }

    /* O card de detalhes */
    .details-container {
        text-align: center; /* Centraliza o conteúdo do card */
        background-color: white;
        padding: 40px 50px;
        border-radius: 16px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.08);
        border: 1px solid #e0e8f0;
        max-width: 650px; /* Um pouco mais largo para os detalhes */
        width: 90%;
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInSlideUp 0.8s ease-out forwards;
    }

    /* Animação de entrada */
    @@keyframes fadeInSlideUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .details-header {
        text-align: center;
        margin-bottom: 25px;
    }

    /* Ícone de Sucesso (Verde) */
    .details-icon {
        font-size: 3rem;
        color: #28a745; /* Verde Sucesso */
        margin-bottom: 15px;
    }

    .details-header h1 {
        color: var(--bank-dark); /* Cor Azul Escura do título */
        font-weight: 700;
        font-size: 2.2em;
        margin: 0;
    }

    /* Callout de Sucesso (Caixa Verde) */
    .success-message {
        color: #155724; /* Verde escuro (texto) */
        background-color: #d4edda; /* Verde claro (fundo) */
        border: 1px solid #c3e6cb;
        border-radius: 8px;
        padding: 15px;
        font-size: 1.1em;
        font-weight: 500;
        margin-bottom: 30px;
        text-align: left;
    }

    /* Nova Grade de Dados (Estilo Tabela/Lista) */
    .data-grid {
        text-align: left;
        margin-bottom: 30px;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        overflow: hidden; /* Para o border-radius funcionar */
    }

    .data-row {
        display: flex;
        padding: 15px 20px;
        border-bottom: 1px solid #e9ecef;
    }
        /* Remove a borda da última linha */
        .data-row:last-child {
            border-bottom: none;
        }
        /* Linhas "zebradas" */
        .data-row:nth-of-type(odd) {
            background-color: #f8f9fa;
        }

    .data-label {
        font-weight: 600;
        color: var(--bank-dark);
        flex-basis: 180px; /* Largura fixa para o "label" */
        flex-shrink: 0;
    }

    .data-value {
        color: #556278;
    }

    /* Botão de Voltar (usando classes de botão primário) */
    .btn-primary {
        background-color: var(--bank-primary);
        border-color: var(--bank-primary);
        padding: 12px 30px;
        font-size: 1.1em;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-primary i {
            margin-right: 8px;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.2);
        }
</style>

<div class="hero-section">
    <div class="details-container">

        <div class="details-header">
            <i class="fa-solid fa-circle-check details-icon"></i>
            <h1>Cliente Cadastrado!</h1>
        </div>

        <p class="success-message">
            🎉 Parabéns! Seus dados foram registrados com sucesso.
        </p>

        @if (Model.Cliente != null)
        {
            <div class="data-grid">
                <div class="data-row">
                    <span class="data-label">Nome Completo:</span>
                    <span class="data-value">@Model.Cliente.Nome</span>
                </div>
                <div class="data-row">
                    <span class="data-label">CPF:</span>
                    <span class="data-value">@Model.Cliente.CPF</span>
                </div>
                <div class="data-row">
                    <span class="data-label">E-mail:</span>
                    <span class="data-value">@Model.Cliente.Email</span>
                </div>
                <div class="data-row">
                    <span class="data-label">Data de Nascimento:</span>
                    <span class="data-value">@Model.Cliente.DataNascimento.ToShortDateString()</span>
                </div>
                <div class="data-row">
                    <span class="data-label">Saldo Inicial:</span>
                    <span class="data-value">@Model.Cliente.Saldo.ToString("C")</span>
                </div>
            </div>
        }
        else
        {
            <p class="text-danger">Cliente não encontrado.</p>
        }

        <a asp-page="/Customers/ExibirClientes" class="btn btn-primary btn-lg">
            <i class="fa-solid fa-arrow-left"></i> Voltar para a Lista
        </a>
    </div>
</div>