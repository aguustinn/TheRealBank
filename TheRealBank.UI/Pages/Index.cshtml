@page
@model IndexModel
@{
    ViewData["Title"] = "Bem-vindo";
    Layout = "_Layout";
}

<style>
    /* Estilos específicos para a página Index */
    .hero-section {
        background: linear-gradient(135deg, #f2f7fa 0%, #ffffff 100%);
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 120px);
        padding: 40px 0;
    }

    .main-container {
        text-align: center;
        background-color: white;
        padding: 60px 70px;
        border-radius: 16px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.08);
        border: 1px solid #e0e8f0;
        max-width: 800px;
        width: 90%;
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInSlideUp 0.8s ease-out forwards;
    }

    @@keyframes fadeInSlideUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .main-container .welcome-icon {
        font-size: 3.8rem;
        color: var(--bank-accent); /* Dourado */
        margin-bottom: 25px;
    }

    .main-container h1 {
        color: var(--bank-dark);
        font-weight: 700;
        font-size: 3em;
        margin-bottom: 15px;
        letter-spacing: -0.5px;
    }

    .main-container p {
        color: #556278;
        font-size: 1.25em;
        line-height: 1.6;
        margin-bottom: 45px;
        padding: 0 20px;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        flex-wrap: wrap;
    }

    .btn {
        padding: 15px 35px;
        font-size: 1.1em;
        font-weight: 600;
        text-decoration: none;
        border-radius: 8px;
        transition: all 0.3s ease;
        border: 2px solid transparent;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

        .btn i.fa-solid {
            margin-right: 10px;
            font-size: 0.95em;
        }

    .btn-primary {
        background-color: var(--bank-primary);
        color: white;
        border-color: var(--bank-primary);
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
            transform: translateY(-3px);
            box-shadow: 0 5px 20px rgba(0, 123, 255, 0.25);
        }

    .btn-outline-primary {
        background-color: transparent;
        color: var(--bank-primary);
        border: 2px solid var(--bank-primary);
    }

        .btn-outline-primary:hover {
            background-color: var(--bank-primary);
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 5px 20px rgba(0, 123, 255, 0.15);
        }

    .btn-link-styled {
        background-color: transparent;
        color: var(--bank-dark);
        border: none;
        text-decoration: underline;
        font-weight: 500;
        font-size: 1em;
        padding: 10px 15px;
    }

        .btn-link-styled:hover {
            color: var(--bank-primary);
        }

</style>

<div class="hero-section">
    <div class="main-container">

        <i class="fa-solid fa-building-columns welcome-icon"></i>

        <h1 class="display-4">Bem-vindo ao TheRealBank</h1>

        <p>Sua plataforma completa para gerenciar clientes com eficiência, segurança e insights poderosos. Estamos aqui para impulsionar o seu sucesso financeiro.</p>

        <div class="action-buttons">
            <a class="btn btn-primary" asp-page="/Customers/AddCliente">
                <i class="fa-solid fa-user-plus"></i>Cadastrar Novo Cliente
            </a>
            <a class="btn btn-outline-primary" asp-page="/Customers/ExibirClientes">
                <i class="fa-solid fa-users"></i>Ver Clientes
            </a>
        </div>

        <div style="margin-top: 25px;">
            <a class="btn-link-styled" asp-page="/Experiencia/Layout">Ver a User Experience</a>
        </div>

    </div>
</div>